<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400" MinHeight="350" MinWidth="400">
    <Grid Background="SlateGray">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <ListView Background="LightGray" Grid.Row ="1" Name="ShopList" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ListViewItem Content="Orange Juice"></ListViewItem>
            <ListViewItem Content="Milk"></ListViewItem>
        </ListView>

    </Grid>
</Window>
